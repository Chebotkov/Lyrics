@{
	Layout = null;
}

@model LyricsImplementer.Models.User

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Registration</title>
	<h2>Register</h2>

	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")
</head>

<body>
	@using (Html.BeginForm("NewUser", "Registration", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
	{
		@Html.AntiForgeryToken()
		<h4>Create a new account.</h4>
		<hr />
		@Html.ValidationSummary()
		<div class="form-group">
			@Html.LabelFor(u => u.Nickname, new { @class = "col-md-2 control-label" })
			<div class="col-md-10">
				@Html.TextBoxFor(u => u.Nickname, new { @class = "form-control" })
			</div>
		</div>
		<div class="form-group">
			@Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
			<div class="col-md-10">
				@Html.PasswordFor(m => m.Password, new { @class = "form-control" })
			</div>
		</div>
		<div class="form-group">
			@Html.LabelFor(m => m.PasswordConfirm, new { @class = "col-md-2 control-label" })
			<div class="col-md-10">
				@Html.PasswordFor(m => m.PasswordConfirm, new { @class = "form-control" })
			</div>
		</div>
		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" class="btn btn-default" value="Register" />
			</div>
		</div>
	}

	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
</body>
</html>
