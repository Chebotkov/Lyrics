@using LyricsImplementer.Models;
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="styles.css" rel="stylesheet">
	<title>@ViewBag.Title</title>
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")
</head>
<body>

	<div id="header">
		<h1>You can find the translations of your favourite songs here.</h1>
		<div id="nav">
			<ul>
				<li>@Html.ActionLink("Home", "MainPage", "Main")</li>
				<li>@Html.ActionLink("Sign in", "Index", "Authorization")</li>
				<li>@Html.ActionLink("Sign up", "NewUser", "Registration")</li>
			</ul>
		</div>
	</div>
	<div>
		<table>
			<tr>
				<td>@RenderBody()</td>
				<td>
					<table>
						<caption><b>Popular songs:</b></caption>

						<tbody>
							@{
								foreach (Song song in ViewBag.PopularSongs)
								{
									<tr>
										<td><a href="/LyricsAndTranslation/SongText/@song.SongId">@String.Format("{0} - {1}", song.Artists.ToList()[0].Name, song.Name)</a></td>
									</tr>
								}
							}
						</tbody>
					</table>
				</td>
			</tr>

		</table>

		<hr />
		<footer>
			<p>&copy; @DateTime.Now.Year - Pasha</p>
		</footer>
	</div>

	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	@RenderSection("scripts", required: false)
</body>
</html>
